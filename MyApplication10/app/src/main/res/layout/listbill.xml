<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout android:layout_width="wrap_content"
    android:id="@+id/SwipeRevealLayout"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_delete"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:src="@drawable/ic_delete"
            android:tint="#0C0C0C" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageproduct1"
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameproduct1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Serpent polo"
            app:layout_constraintStart_toEndOf="@+id/imageproduct1"
            app:layout_constraintTop_toTopOf="@+id/imageproduct1" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="x1"
            app:layout_constraintBottom_toBottomOf="@+id/nameproduct1"
            app:layout_constraintStart_toEndOf="@+id/nameproduct1"
            app:layout_constraintTop_toTopOf="@+id/nameproduct1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/size1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="XL"
            app:layout_constraintBottom_toBottomOf="@+id/imageproduct1"
            app:layout_constraintStart_toEndOf="@+id/imageproduct1" />

        <TextView
            android:id="@+id/pricebill1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="800000"
            app:layout_constraintBottom_toBottomOf="@+id/imageproduct1"
            app:layout_constraintStart_toEndOf="@+id/imageproduct1"
            app:layout_constraintVertical_bias="1.0" />
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>